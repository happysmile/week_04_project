<h1>Sight types</h1>

<ul class="results">
  <% for sight_type in @sight_types %>
    <li>
      <h2><%= sight_type.name %></h2>
      <form class="button_only" action="/sight-types/<%= sight_type.id %>/delete" method="post">
        <fieldset>
          <input type="submit" name="delete" value="Delete">
        </fieldset>
      </form>
      <form class="button_only" action="/sight-types/<%= sight_type.id %>/edit" method="get">
        <fieldset>
          <input type="submit" name="update" value="Update">
        </fieldset>
      </form>
    </li>
  <% end %>
</ul>

<p><a href="/sight-types/new">Add a sight type</a></p>
