<h1><%= @location.name() %></h1>

<table>
  <tr>
    <th>Location</th>
    <th>Country</th>
    <th>Type</th>
  </tr>
  <tr>
    <td>
      <%= @location.name %>
    </td>
    <td>
      <a href="/countries/<%= @location.country().id %>"><%= @location.country().name %></a>
    </td>
    <td>
      <%= @location.location_type %>
    </td>
  </tr>
</table>

<div class="buttons">
  <form class="button_only" action="/locations/<%= @location.id %>/delete" method="post">
    <fieldset>
      <input type="submit" name="delete" value="Delete">
    </fieldset>
  </form>
  <form class="button_only" action="/locations/<%= @location.id %>/edit" method="get">
    <fieldset>
      <input type="submit" name="update" value="Update">
    </fieldset>
  </form>
</div>

<% if (@location.sights().count > 0)
sights = @location.sights()%>
<h2>Sights in this location</h2>
<ul>
  <% for sight in sights %>
   <li><a href="/sights/<%=sight.id %>"><%=sight.name %></a></li>
  <% end %>
</ul>
<%end %>

<p class="more"><a href="/locations">View all locations</a></p>
