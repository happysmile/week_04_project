<h1>Countries</h1>

<ul>
  <% for country in @countries %>
    <li>
      <h3>Country: <a href="/countries/<%= country.id %>"><%= country.name %></a></h3>
      <ul>
        <% for location in country.locations() %>
          <li>
            <p>Location: <%= location.name %></p>
            <ul>
              <% for sight in location.sights() %>
                <li>Sight: <a href="/sights/<%= sight.id %>"><%= sight.name %></a></li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
      <hr>
    </li>
  <% end %>
</ul>
