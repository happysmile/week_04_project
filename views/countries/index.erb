<h1>Countries</h1>

<ul>
  <% for country in @countries %>
    <li>
      <h3><a href="/countries/<%= country.id %>"><%= country.name %></a></h3>
      <ul>
        <% for location in country.locations() %>
          <li>
            <h4><a href="/locations/<%= location.id %>"><%= location.name %></a></h4>
            <ul>
              <% for sight in location.sights() %>
                <li><a href="/sights/<%= sight.id %>"><%= sight.name %></a></li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
