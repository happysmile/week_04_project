<h1>Search</h1>

<form action="/search-results" method="post">
  <h2>Search by</h2>
  <fieldset>
    <label for="name">Name</label>
    <input type="text" name="name">
  </fieldset>
  <fieldset>
    <label for="type_id">Type</label>
    <select name="type_id">
    <option value="">Please choose</option>
      <% for type in @sight_types %>
      <option value="<%=type.id %>"><%=type.name %></option>
      <% end %>
    </select>
  </fieldset>
  <fieldset>
    <label for="location_id">Location</label>
    <select name="location_id">
    <option value="">Please choose</option>
      <% for location in @locations %>
      <option value="<%=location.id %>"><%=location.name %></option>
      <% end %>
    </select>
  </fieldset>
  <fieldset>
    <label for="priority">priority</label>
    <select name="priority">
      <option value="">Any</option>
      <% for n in 0..5 %>
      <option value="<%=n %>"><%=n %></option>
      <% end %>
    </select>
  </fieldset>
  <fieldset>
      <label for="visited">Visited?</label>
      <br>
      Yes: <input type="radio" name="visited" value="visited"><br>
      No: <input type="radio" name="visited" value="not_visited"><br>
      Any: <input type="radio" name="visited" value="">
  </fieldset>
  <fieldset>
    <input type="submit" value="Search">
  </fieldset>
</form>

<form action="/search-by-country" method="post">
  <h2>Search by country</h2>
  <fieldset>
    <label for="country_id">Country</label>
    <select name="country_id">
    <option value="">Please choose</option>
      <% for country in @countries %>
      <option value="<%=country.id %>"><%=country.name %></option>
      <% end %>
    </select>
  </fieldset>
  <fieldset>
    <input type="submit" value="Search">
  </fieldset>
</form>
